{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017"],
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "diagnostics": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "stripInternal": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}