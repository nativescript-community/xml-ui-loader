<Page xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:ptr="pullToRefresh.xml">
  <GridLayout rows="*,*">
    <ListView row="0" items="{{ items }}">
      <ListView.itemTemplate>
        <ptr:PullToRefresh>
          <slotContent>
            <StackLayout>
              <Label text="Hey there!"/>
            </StackLayout>
          </slotContent>
        </ptr:PullToRefresh>
      </ListView.itemTemplate>
    </ListView>
    <ptr:PullToRefresh row="1">
      <slot>
        <TextView/>
      </slot>
    </ptr:PullToRefresh>
  </GridLayout>
</Page>